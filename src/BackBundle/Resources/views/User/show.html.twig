{% extends 'BackBundle::layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/css/front/css') }}">
{% endblock %}
{% block content %}
    <h1>User</h1>
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    {% if user.path is not null %}
                        <img src="{{ asset(user.webPath('thumb-300-300-')) }}" class="img-responsive img-rounded text-center" />
                    {% else %}
                        <img src="http://placehold.it/300x300" class="img-responsive img-rounded text-center" alt="">
                    {% endif %}
                </div>
                <!-- END SIDEBAR USERPIC -->

                <br />
                <!-- SIDEBAR BUTTONS -->
                <div class="profile-userbuttons">
                    <a href="{{ path('back_user_edit', { 'id': user.id }) }}" class="btn btn-success btn-flat btn-lg">Edit {{ user.username }}</a>
                    <br />
                    <br />
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete {{ user.username }}" class="btn btn-danger btn-sm">
                    {{ form_end(delete_form) }}
                </div>
                <!-- END SIDEBAR BUTTONS -->
                <!-- END MENU -->
            </div>
        </div>
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="profile-content">
                        <div class="col-lg-12 padding-right-0 padding-left-0">
                            <div class="panel panel-default">
                                <!-- Default panel contents -->
                                <div class="panel-heading">Informations personnelles</div>

                                <!-- List group -->
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <strong>Utilisateur</strong>
                                        <div class="material-switch pull-right">
                                            {{ user.username }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Nom</strong>
                                        <div class="material-switch pull-right">
                                            {{ user.firstname|upper }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Prénom</strong>
                                        <div class="material-switch pull-right">
                                            {{ user.lastname|capitalize }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Email</strong>
                                        <div class="material-switch pull-right">
                                            <a href="mailto:{{ user.email }}">{{ user.email }}</a>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Adresse</strong>
                                        <div class="material-switch pull-right">
                                            {{ user.address }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Code Postale</strong>
                                        <div class="material-switch pull-right">
                                            {{ user.zipcode }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Ville</strong>
                                        <div class="material-switch pull-right">
                                            {{ user.city }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Pays</strong>
                                        <div class="material-switch pull-right">
                                            {{ user.country }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Roles</strong>
                                        <div class="material-switch pull-right">
                                            {% for roles in user.roles %}
                                                {% if roles is defined %}
                                                    {{ roles }},
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        N° Domicile {{ user.phone }} publique
                                        <div class="material-switch pull-right">
                                            {% if user.phonePublic %}
                                                <span class="label label-success">public</span>
                                            {% else %}
                                                <span class="label label-danger">privé</span>
                                            {% endif %}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        N° Mobile {{ user.mobile }} publique
                                        <div class="material-switch pull-right">
                                            {% if user.mobilePublic %}
                                                <span class="label label-success">public</span>
                                            {% else %}
                                                <span class="label label-danger">privé</span>
                                            {% endif %}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        Adresse publique
                                        <div class="material-switch pull-right">
                                            {% if user.addressPublic %}
                                                <span class="label label-success">public</span>
                                            {% else %}
                                                <span class="label label-danger">privé</span>
                                            {% endif %}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Dernière connexion</strong>
                                        <div class="material-switch pull-right">
                                            {{ user.lastLogin|date }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Statut</strong>
                                        <div class="material-switch pull-right">
                                            {{ user.locked }}
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <a href="{{ path('back_user_index') }}" class="btn btn-default">Back to the list</a>
    <br />


{% endblock %}
