{% extends 'BackBundle::layout.html.twig' %}

{% block content %}
    <h1>AdvertFile list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Alt</th>
                <th>Path</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for advertFile in advertFiles %}
            <tr>
                <td><a href="{{ path('advertfile_show', { 'id': advertFile.id }) }}">{{ advertFile.id }}</a></td>
                <td>{{ advertFile.alt }}</td>
                <td>{{ advertFile.path }}</td>
                <td>{% if advertFile.createdAt %}{{ advertFile.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('advertfile_show', { 'id': advertFile.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('advertfile_edit', { 'id': advertFile.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('advertfile_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
