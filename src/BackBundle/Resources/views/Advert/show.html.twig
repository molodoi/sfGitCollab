{% extends 'BackBundle::layout.html.twig' %}

{% block content %}
    <h1>Advert</h1>
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    <img src="http://placehold.it/300x300" class="img-responsive img-rounded text-center" alt="">
                </div>
                <br />
                <div class="profile-userbuttons">
                    <a href="{{ path('back_advert_edit', { 'id': advert.id }) }}" class="btn btn-success btn-lg btn-flat">Edit {{ advert.title|capitalize }}</a>
                    <br />
                    <br />
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete {{ advert.title|capitalize }}" class="btn btn-danger btn-sm btn-flat">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="profile-content">
                        <div class="col-lg-12 padding-right-0 padding-left-0">
                            <div class="panel panel-default">
                                <!-- Default panel contents -->
                                <div class="panel-heading">{{ advert.title|capitalize }}</div>
                                <!-- List group -->
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <strong>Description:</strong><br />
                                        {{ advert.content|capitalize }}
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Titre de l'annonce</strong>
                                        <div class="material-switch pull-right">
                                            {{ advert.title|capitalize }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Prix:</strong>
                                        <div class="material-switch pull-right">
                                            {{ advert.price }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Type:</strong>
                                        <div class="material-switch pull-right">
                                            {{ advert.type|capitalize }}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Publique:</strong>
                                        <div class="material-switch pull-right">
                                            {% if advert.isPublic %}
                                                <span class="label label-success">public</span>
                                            {% else %}
                                                <span class="label label-danger">privé</span>
                                            {% endif %}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Activé:</strong>
                                        <div class="material-switch pull-right">
                                            {% if advert.isActivated %}
                                                <span class="label label-success">activé</span>
                                            {% else %}
                                                <span class="label label-danger">inactif</span>
                                            {% endif %}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Crée:</strong>
                                        <div class="material-switch pull-right">
                                            {% if advert.createdAt %}{{ advert.createdAt|date('Y-m-d H:i:s') }}{% endif %}

                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Expiré le:</strong>
                                        <div class="material-switch pull-right">
                                            {% if advert.expiredAt %}{{ advert.expiredAt|date('Y-m-d H:i:s') }}{% endif %}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Maj:</strong>
                                        <div class="material-switch pull-right">
                                            {% if advert.updatedAt %}{{ advert.updatedAt|date('Y-m-d H:i:s') }}{% endif %}
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Supprimé le:</strong>
                                        <div class="material-switch pull-right">
                                            {% if advert.deletedAt %}{{ advert.deletedAt|date('Y-m-d H:i:s') }}{% endif %}
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('back_advert_index') }}" class="btn btn-default">Back to the list</a>
    <br />
{% endblock %}
