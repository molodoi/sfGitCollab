{% extends 'BackBundle::layout.html.twig' %}

{% block content %}
    <h1>Whishlist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ whishlist.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if whishlist.createdAt %}{{ whishlist.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('back_whishlist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('back_whishlist_edit', { 'id': whishlist.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
