<div class="col-md-12">
    <hr />
    {#{{ dump(search_post_form) }}#}


    <form action="{{ path('front_advert_post_search') }}" method="POST">
        {{ form_errors(search_post_form) }}
        <div class="form-group col-lg-4 padding-left-0 padding-right-5 {% if form_errors(search_post_form.keyword) %} has-error {% endif %}">
            <label class="sr-only" for="exampleInputEmail3">Mots clés</label>
            {{ form_errors(search_post_form.keyword) }}
            {{ form_widget(search_post_form.keyword, { 'attr': {'class': 'form-control input-lg', 'placeholder': 'Mots clés'} }) }}
        </div>
        <div class="form-group col-lg-4 padding-left-0 padding-right-5">
            {{ form_widget(search_post_form.category, { 'attr': {'class': 'form-control input-lg'} }) }}
        </div>
        <div class="form-group col-lg-4 padding-right-0 padding-left-0">
            <div id="custom-geo-input">
                <div class="input-group col-md-12">
                    {{ form_widget(search_post_form.city, { 'attr': {'class': 'form-control input-lg', 'placeholder': 'Ville/Cp'} }) }}
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="button">
                            <i class="glyphicon glyphicon-map-marker"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <button type="submit" class="btn btn-default btn-lg btn-block"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Rechercher</button>
        {{ form_widget(search_post_form) }}
    </form>
</div>