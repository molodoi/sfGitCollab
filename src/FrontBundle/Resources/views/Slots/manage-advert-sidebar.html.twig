{% if app.user %}
    <div class="panel panel-default">
        <div class="panel-heading">Gérer votre annonce</div>
        <div class="panel-body">
            <div class="list-group">
                <a href="#" class="btn btn-block btn-lg btn-default">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Mettre en avant
                </a>
                <a href="{{ path('front_logged_advert_update', { 'id' : advert.id }) }}" class="btn btn-block btn-lg btn-default">
                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Mettre à jour
                </a>
                <a href="{{ path('front_logged_advert_edit', { 'id' : advert.id }) }}" class="btn btn-block btn-lg btn-default">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier l'annonce
                </a>
                <a href="{{ path('front_logged_advert_delete', { 'id' : advert.id }) }}" class="btn btn-block btn-lg btn-default">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Supprimer l'annonce
                </a>
            </div>
        </div>
    </div>
{% endif %}