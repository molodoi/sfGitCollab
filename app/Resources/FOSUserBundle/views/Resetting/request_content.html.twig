                                    <input type="text" class="form-control" id="username" name="username" required="required" title="Please enter you username" placeholder="example@gmail.com" />
                                </div>
                                <span class="help-block"></span>
                            </div>
                            <button type="submit" class="btn btn-success btn-block">{{ 'resetting.request.submit'|trans }}</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
